pipeline {
    agent any
    // Especifica la herramienta Node.js que se utilizarÃ¡ en ese contexto de jenkins --> Tools --> NodeJS installations --> Name: nodejs
    tools {
        nodejs 'nodejs'
    }
    stages {
        stage('Build') {
            // Instalar las dependencias de Node.js especificadas en el archivo "package.json"
            steps {
                echo "Ejecutar npm install" 
                sh 'npm install'
            }
        }     
        stage('Test') {
            // Ejecutar las pruebas especificadas en el archivo "package.json" del proyecto
            steps {
                echo "Ejecutar npm test" 
                sh 'npm test'
            }
        }
    }
}
